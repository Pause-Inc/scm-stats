<html>
    <head>
        <title>{% block title %}{% endblock %}</title>

        {% stylesheets '../resources/less/*.less' filter='less,yui_css' output='asset/css/core.css' %}
            <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
        {% endstylesheets %}

        <link href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" type="text/css" rel="stylesheet" />

        <script type="text/javascript" src="http://code.jquery.com/jquery-1.9.1.js"></script>
        <script type="text/javascript" src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>

        {% javascripts
            '../resources/js/flot/jquery.flot.js'
            '../resources/js/jstat-1.0.0.js'
            '../resources/js/main.js'
            filter=''
            output='asset/js/core.js'
        %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}

    </head>
    <body>
        <header>
            <div class="container">
                <h1>Scm Stats</h1>
            </div>
        </header>
        <div class="container">
            {% block content %}{% endblock %}
        </div>
        <footer class="container">
            <p class="copyright">Copyright &copy; <a href="http://www.pause.ca" target="_blank">Pause</a> Productions Inc.</p>
        </footer>
    </body>
</html>
